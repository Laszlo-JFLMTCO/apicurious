
<% if @current_user %>
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            MY SUBREDDITS
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <ul>
              <% @reddit_user_content.subreddits_subscriber.keys.sort.each do |subreddit_name| %>
                <li>
                  <p>
                    <a class="dropdown-item" href="#"><%= @reddit_user_content.subreddits_subscriber[subreddit_name].display_name %></a>
                  </p>
                </li>
              <% end %>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </nav>
  <div class = "reddit-logo-bar">
    <img src="http://b.thumbs.redditmedia.com/mbyqrs63m8lz96cPoyHhqm9AUoQ8YGszR6k7dsdPOzA.png">
    <div class = "user-details">
      <p>
        <%= @reddit_user_content.name %> ( <strong><%= @reddit_user_content.karma_post %></strong> )
      </p>
    </div>
  </div>
<% elsif %>
  <div class = "reddit-login text-center">
    <h1>Reddit - apicurious</h1>
    <%= link_to "Login with Reddit", login_with_reddit_path, class: "btn btn-danger" %>
  </div>
<% end %>